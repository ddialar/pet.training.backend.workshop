{
  "name": "pet-training-backend",
  "version": "0.0.1",
  "description": "Pet training backend workshop",
  "main": "app.js",
  "author": "Dailos Rafael DÃ­az Lara <ddialar@gmail.com>",
  "license": "ISC",
  "engines": {
    "node": ">=16.15.0"
  },
  "scripts": {
    "build": "npm run clean; webpack --config ./webpack/webpack.prod.js",
    "test": "jest --no-cache --runInBand",
    "test:watch": "npm run test_infra:up && npm run test -- --watch --verbose && npm run test_infra:down",
    "test:coverage": "npm run test -- --coverage",
    "test_infra:up": "docker-compose -f docker/docker-compose.yaml --env-file docker/test/.docker.env up -d",
    "test_infra:down": "docker-compose -f docker/docker-compose.yaml --env-file docker/test/.docker.env down -v",
    "lint:fix": "npx eslint --fix",
    "lint:lockfile": "lockfile-lint --path package-lock.json --type npm --validate-https --allowed-hotst npm",
    "deps": "npm run deps:audit && npm run deps:sec-scan",
    "deps:audit": "npm audit && npm outdated -l",
    "deps:sec-scan": "npm run lint:lockfile",
    "clean": "rimraf dist",
    "postinstall": "npx husky install"
  },
  "lint-staged": {
    "*.ts": "npm run lint:fix"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "express": "^4.18.1",
    "helmet": "^5.1.0",
    "http-status-codes": "^2.2.0",
    "joi": "^17.6.0",
    "jsonwebtoken": "^8.5.1",
    "mysql2": "^2.3.3",
    "pino": "^8.0.0",
    "sequelize": "^6.20.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.5.2",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^17.0.38",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "clean-webpack-plugin": "^4.0.0",
    "dotenv": "^16.0.1",
    "eslint": "^8.16.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.2.1",
    "eslint-plugin-promise": "^6.0.0",
    "husky": "^8.0.1",
    "jest": "^28.1.0",
    "lint-staged": "^13.0.0",
    "lockfile-lint": "^4.7.4",
    "rimraf": "^3.0.2",
    "supertest": "^6.2.3",
    "ts-jest": "^28.0.4",
    "ts-loader": "^9.3.0",
    "ts-node": "^10.8.0",
    "tsconfig-paths-webpack-plugin": "^3.5.2",
    "typescript": "^4.7.2",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.9.2",
    "webpack-merge": "^5.8.0",
    "webpack-node-externals": "^3.0.0"
  }
}
